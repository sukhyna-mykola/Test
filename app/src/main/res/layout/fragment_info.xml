<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialod_view_dimen"
        android:layout_marginTop="@dimen/dialod_view_dimen"
        android:text="@string/courses" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/courses_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/average_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialod_view_dimen"
        android:layout_marginRight="@dimen/dialod_view_dimen"
        android:layout_marginTop="@dimen/dialod_view_dimen"
        android:clickable="false"
        android:enabled="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/ok"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="right"
        android:layout_margin="@dimen/dialod_view_dimen"
        android:text="@string/ok" />

</LinearLayout>